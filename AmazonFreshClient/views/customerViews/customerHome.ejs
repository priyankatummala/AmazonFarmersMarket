<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.3/angular-route.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.2.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/customer/customerHomeStyles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
          integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/farmer/farmer.css'/>
    <link href="css/simple-sidebar.css" rel="stylesheet">
    <script src="/javascripts/angular/customers/customerController.js"></script>
</head>
<body ng-app="customerApp">
<div style="background-image: url(/images/header/taskbar-bg.png); width: 100%; height: 45px"
     class="container-fluid">
    <a href="#/"><img src="/images/header/af-logo-white.png" style="margin-top: 5px"></a>
    <a href="/logout" style = "color:white; float: right; margin-top: 1rem"><span class="glyphicon glyphicon-log-out"></span> Logout   </a>
</div>
<div ng-controller="ParentController" class="row" style="width: 100%">
    <div id="shopBar" style="margin-left: 10%">
        <form novalidate>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label" for="sm"></label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="searchItem" ng-model="searchItem"
                           placeholder="Search All Amazon">
                <span style="float: right;margin: -32px -1px;">
                    <button type="submit" ng-click="search();" class="goButton"></button>
                </span>
                </div>
            </div>
        </form>
    </div>

    <a href="#/editProfile">My Profile</a>
    <a href="#/orderHistory">Order History</a>
    <a href="#/cartDetails">My Cart<span class="glyphicon glyphicon-shopping-cart"></span></a>
</div>
<div ng-view class="container-fluid"></div>
</body>
</html>