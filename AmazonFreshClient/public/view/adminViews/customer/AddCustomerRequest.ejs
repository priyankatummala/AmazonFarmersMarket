
<div>
  <h1>Customer Requests</h1>

  <form>
    <div class="form-group">
      <input ng-model="search.$" type="text" class="form-control" placeholder="Search">
    </div>
  </form>

  <table class="table table-bordered table-striped">
    <tr>
      <th>Cutomer ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>email</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th>Phone</th>
      <th>Accept</th>
      <th>Decline</th>
    </tr>
    <tr ng-repeat="customer in customers.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage)) | filter:search">
      <td> {{customer.customerid}} </td>
      <td> {{customer.firstname}} </td>
      <td> {{customer.lastname}} </td>
      <td> {{customer.email}} </td>
      <td> {{customer.address}} </td>
      <td> {{customer.city}} </td>
      <td> {{customer.state}} </td>
      <td> {{customer.zipcode}} </td>
      <td> {{customer.phonenumber}} </td>
      <td><button ng-click="addCustomer(customer.customerid)" class="btn btn-success"> Accept</button></td>
      <td><button ng-click="deleteCustomer(customer.customerid)" class="btn btn-danger"> Reject</button></td>
    </tr>
  </table>
  <uib-pagination total-items="totalItems" ng-model="currentPage"></uib-pagination>
</div>