<div>
    <h1>List of Customers</h1>

    <form>
        <div class="form-group">
            <input ng-model="search.$" type="text" class="form-control" placeholder="Search">
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Cutomer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>email</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Phone</th>
        </tr>
        <tr ng-repeat="customer in customersAvailable.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage)) | filter:search">
            <td> {{customer.customerid}} </td>
            <td> {{customer.firstname}} </td>
            <td> {{customer.lastname}} </td>
            <td> {{customer.email}} </td>
            <td> {{customer.address}} </td>
            <td> {{customer.city}} </td>
            <td> {{customer.state}} </td>
            <td> {{customer.zipcode}} </td>
            <td> {{customer.phonenumber}} </td>
        </tr>
    </table>
    <uib-pagination total-items="totalItems" ng-model="currentPage"></uib-pagination>
</div>