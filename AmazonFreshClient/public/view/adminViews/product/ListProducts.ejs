<div>
    <h1>List of Products</h1>

    <form>
        <div class="form-group">
            <input ng-model="search.$" type="text" class="form-control" placeholder="Search">
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Product Price</th>
            <th>Farmer ID</th>
        </tr>
        <tr ng-repeat="product in productsAvailable.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage)) | filter:search">
            <td> {{product.productid}} </td>
            <td> {{product.productname}} </td>
            <td> {{product.description}} </td>
            <td> {{product.productprice}} </td>
            <td> {{product.farmerid}} </td>
        </tr>
    </table>
    <uib-pagination total-items="totalItems" ng-model="currentPage"></uib-pagination>
</div>