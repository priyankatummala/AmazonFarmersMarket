<div>
    <h1>List of Trips</h1>

    <form>
        <div class="form-group">
            <input ng-model="search.$" type="text" class="form-control" placeholder="Search">
        </div>
    </form>
    <script >
    function redirectToMap(tripid) {
    	location.href="/api/showmap?tripid="+ tripid;
    }
    </script>
    <p>here</p>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Trip ID</th>
            <th>Pickup Location</th>
            <th>Dropoff Location</th>
            <th>Dropoff ZipCode</th>
            <th>Trip Status</th>
            <th>Driver ID</th>
            <th>Truck ID</th>
            <th>Bill ID</th>
            <th>View on Map</th>
        </tr>
        <tr ng-repeat="trip in trips.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage)) | filter:search">
            <td> {{trip.tripid}} </td>
            <td> {{trip.pickuploc}} </td>
            <td> {{trip.dropoffloc}} </td>
            <td> {{trip.dropoffzip}} </td>
            <td> {{trip.tripstatus}} </td>
            <td> {{trip.driverid1}} </td>
            <td> {{trip.truckid1}} </td>
            <td> {{trip.billid1}} </td>
            <td><button ng-click="showmap(trip.tripid)" class="btn btn-success" ng-hide="trip.tripendflag"> View on Map</button></td>
        </tr>
    </table>
    <uib-pagination total-items="totalItems" ng-model="currentPage"></uib-pagination>
</div>

