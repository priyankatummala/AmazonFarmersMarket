<div>
    <h1>List of Trucks</h1>

    <form>
        <div class="form-group">
            <input ng-model="search.$" type="text" class="form-control" placeholder="Search">
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Truck ID</th>
            <th>Truck Info</th>
            <th>Driver ID</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <tr ng-repeat="truck in trucks.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage)) | filter:search">
            <td> {{truck.truckid}} </td>
            <td> {{truck.truckinfo}} </td>
            <td> {{truck.driverid}} </td>
            <td><button  ng-click="editTruck(truck.truckid)" class="btn btn-success"> Edit</button></td>
            <td><button ng-click="deleteTruck(truck.truckid)" class="btn btn-danger"> Delete</button></td>
        </tr>
    </table>
    <uib-pagination total-items="totalItems" ng-model="currentPage"></uib-pagination>
</div>