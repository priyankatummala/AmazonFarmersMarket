<div>
    <h1>List of Drivers</h1>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Driver ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>email</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Phone</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <tr ng-repeat="driver in drivers">
            <td> {{driver.driverid}} </td>
            <td> {{driver.firstname}} </td>
            <td> {{driver.lastname}} </td>
            <td> {{driver.email}} </td>
            <td> {{driver.address}} </td>
            <td> {{driver.city}} </td>
            <td> {{driver.state}} </td>
            <td> {{driver.zipcode}} </td>
            <td> {{driver.phonenumber}} </td>
            <td><button ng-click="editDriver(driver.driverid)"class="btn btn-success"> Edit</button></td>
            <td><button ng-click="deleteDriver(driver.driverid)" class="btn btn-danger"> Delete</button></td>
        </tr>
    </table>
</div>
