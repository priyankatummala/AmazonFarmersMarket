<div>
    <h1>Farmer Requests</h1>

    <form>
        <div class="form-group">
            <input ng-model="search.$" type="text" class="form-control" placeholder="Search">
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Farmer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>email</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Phone</th>
            <th>Accept</th>
            <th>Decline</th>
        </tr>
        <tr ng-repeat="farmer in farmers.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage)) | filter:search">
            <td> {{farmer.farmerid}} </td>
            <td> {{farmer.firstname}} </td>
            <td> {{farmer.lastname}} </td>
            <td> {{farmer.email}} </td>
            <td> {{farmer.address}} </td>
            <td> {{farmer.city}} </td>
            <td> {{farmer.state}} </td>
            <td> {{farmer.zipcode}} </td>
            <td> {{farmer.phonenumber}} </td>
            <td><button ng-click="addFarmer(farmer.farmerid)" class="btn btn-success"> Accept</button></td>
            <td><button ng-click="deleteFarmer(farmer.farmerid)" class="btn btn-danger"> Reject</button></td>
        </tr>
    </table>
    <uib-pagination total-items="totalItems" ng-model="currentPage"></uib-pagination>
</div>